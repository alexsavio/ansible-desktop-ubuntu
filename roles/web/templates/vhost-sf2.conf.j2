<VirtualHost *:{{ web.httpd_port }}>
    ServerName {{ web.domain }}
    DocumentRoot {{ web.project_path }}/web

    DirectoryIndex {{ web.directory_index }}

    <Directory "{{ web.project_path }}/web">
        Options -Indexes FollowSymLinks
        AllowOverride All
        Allow from All
    </Directory>

</VirtualHost>
